.popup-pic
	display block
	position fixed
	z-index 1000
	top 0
	left 0
	display none
	width 100%
	height 100vh
	background-color transparent
	pointer-events none

	&__close
		background-color transparent
		border none
		outline none
		position absolute
		top 20px
		right 20px
		pointer-events auto
	&__wrap
		width 100%
		height 100%
		display flex
		align-items center
		justify-content center

.active-popup
	display flex
	justify-content center
	align-items center