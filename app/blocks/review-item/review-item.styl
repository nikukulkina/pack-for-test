.review-item
	display block
	margin-right 20px
	min-width 300px !important
	height 410px
	background-color #F9F7F2

	&__userpic-wrap
		margin-right 10px
		width 30px
		height 30px
		border-radius 30px
		overflow hidden
	&__wrap
		display flex
		flex-direction column
		justify-content space-between
		padding-top 28px
		padding-left 20px
		padding-right 23px
		padding-bottom 16px
		height 100%
	&__user
		display flex
		align-items center
	&__title
		margin-top 26px
		margin-bottom 10px
		color #FC4F1E
		font-size 13px
		line-height 17px
		letter-spacing .46px
		font-weight 500
		text-transform uppercase
		&_reg
			color #212121
			font-weight 400
	&__text
		font-family 'Roboto', sans-serif
		line-height 25px
		width 100%
		max-width 240px
	&__bottom
		margin-top 13px
		display flex
		justify-content space-between
		font-family 'Roboto', sans-serif
		color #9D9D9D
		font-size 11px
		line-height 25px
		align-items flex-end
	&__comments-wrap,
	&__likes-wrap
		position relative
		display block
	&__comments,
	&__likes
		text-decoration none
		color #9D9D9D
	&__time
		width 99px
	&__comments-wrap
		width 100%
		max-width 113px
		&::before
			position absolute
			top 50%
			left -7px
			width 2px
			height 2px
			border-radius 50%
			content ''
			background-color #9D9D9D
	&__likes-wrap
		padding-left 18px
		border none
		outline none
		background-color transparent
		line-height 25px
		&::before
			position absolute
			top 2px
			left 0
			width 14px
			height 16px
			content ''
			background-image url('./../../images/like.png')
	&__gallery-wrap
		display flex
		justify-content space-between
		width 100%
		max-width 215px
	&__inner-wrap
		position relative
		display flex
		justify-content center
		align-items center
		width 50px
		height 50px
	&__pic
		position absolute
		width 100%
		height 100%
		filter brightness(.8)
	&__few
		position absolute
		font-weight 500
		font-family 'Roboto', sans-serif
		font-size 17px
		line-height 25px
		color #ffffff
		letter-spacing -1.8px
