.chat
	display block
	width 100%
	max-width 415px
	&__wrap
		padding-top 27px
		margin-top 25px
		background-color #fff
	&__user-wrap
		padding-bottom 27px
		padding-left 25px
		border-bottom 1px solid #9D9D9D
	&__message
		height 44px
		border 1px solid #9D9D9D
		outline none
		width 100%
		margin-right 15px
		padding-left 23px
	&__chat
		width 100%
		padding-bottom 27px
		padding-left 25px
		border-bottom 1px solid #9D9D9D
		min-height 496px
	&__send
		display flex
		padding-bottom 30px
		padding-top 29px
		padding-left 25px
		padding-right 19px
	&__pic-wrap
		margin-right 20px
		width 44px
		height 44px
		border-radius 50%
		overflow hidden
		flex-shrink 0
	&__button
		border none
		outline none
		background-color transparent
		&:hover
			filter brightness(.9)
	&__form
		display flex
		width 100%
		justify-content space-between