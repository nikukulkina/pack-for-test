.button
	display flex
	justify-content center
	align-items center
	width 100%
	height 40px
	font-size 15px
	font-weight 500
	line-height 17px
	color #212121
	background-color #ffffff
	border 2px solid #FF4641
	
	transition color .3s ease-in-out, background-color .3s ease-in
	&:hover
		color #ffffff
		background-color #FF4641
